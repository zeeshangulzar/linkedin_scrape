
<h1>comparison</h1>

<div class="container">
  <div class="lg-col-4">
    <h1><%= "express" %></h1>
    <% express = Express.where("title like 'iphone%'").first %>
    <p>
      <strong>Title:</strong>
      <%= express.title %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= express.price %>
    </p>

    <p>
      <strong>Images:</strong>
      <%= image_tag(express&.image, size: "150x150") if express.image.present?%>
    </p>
  </div>


  <div class="lg-col-4">
    <h1><%= "amazon" %></h1>

    <% amazon=  Amazon.where("title like 'iphone%'").first %>

    <p>
      <strong>Title:</strong>
      <%= amazon.title %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= amazon.price %>
    </p>

    <p>
      <strong>Images:</strong>
      <%= image_tag(amazon&.image, size: "150x150") if amazon.image.present?%>
    </p>
  </div>
</div>
